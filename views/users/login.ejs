<% layout("/layouts/boilerplate") %>

<div class="row mt3">
  <h1 class="col-6 offset-3 mt-4"><b>Login</b></h1>
  <div class="col-8 offset-3 mt-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label"><b>Username</b></label>
        <input
          name="username"
          type="text"
          class="form-control"
          required
          id="username"
        />
        <div class="valid-feedback">Looks good.</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label"><b>Password</b></label>
        <input
          name="password"
          type="text"
          class="form-control"
          required
          id="password"
        />
      </div>
      <button  class="btn btn-success"><b>Login</b></button>
  </div>
</div>
